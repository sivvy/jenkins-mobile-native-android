<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="90px"
    android:weightSum="6"
    android:id="@+id/icon_row_default"
    android:background="@drawable/title_bar_gradient" >
     <ImageView
            android:id="@+id/home"
            android:layout_width="0px"
            android:layout_height="80px"
            android:paddingTop="5px"
            android:src="@drawable/icon_home_active"
            android:clickable="true"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/app_title" 
        android:layout_width="0px"
        android:layout_height="60px"
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:text="Servers"
        android:textColor="#fff"
        android:textSize="30px"
        android:shadowColor="#999"
    android:shadowRadius="0.5"
    android:shadowDx="2"
    android:shadowDy="2"
        android:layout_gravity="center"
            android:layout_weight="3" />
        <ImageView
            android:id="@+id/refresh"
            android:layout_width="0px"
            android:layout_height="80px"
            android:paddingTop="5px"
            android:src="@drawable/icon_refresh"
            android:clickable="true"
        android:layout_weight="1" />
    <ImageView
            android:id="@+id/settings"
            android:layout_width="0px"
            android:layout_height="80px"
            android:paddingTop="5px"
            android:src="@drawable/icon_settings_active"
            android:clickable="true"
        android:layout_weight="1" />
</LinearLayout>
<LinearLayout
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="90px"
    android:weightSum="6"
    android:id="@+id/icon_row_settings"
    android:background="@drawable/title_bar_gradient" >
    <ImageView
            android:id="@+id/done"
            android:layout_width="0px"
            android:layout_height="80px"
            android:paddingTop="5px"
            android:src="@drawable/icon_home_active"
            android:clickable="true"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/app_title" 
        android:layout_width="0px"
        android:layout_height="60px"
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:text="Settings"
        android:textColor="#fff"
        android:textSize="30px"
        android:shadowColor="#999"
    android:shadowRadius="0.5"
    android:shadowDx="2"
    android:shadowDy="2"
        android:layout_gravity="center"
            android:layout_weight="4" />
    <ImageView
            android:id="@+id/add"
            android:layout_width="0px"
            android:layout_height="80px"
            android:paddingTop="5px"
            android:src="@drawable/icon_add"
            android:clickable="true"
        android:layout_weight="1" />
</LinearLayout>

<!-- ListView (grid_items) -->
<LinearLayout android:id="@+id/layout"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <ListView android:id="@+id/listview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:cacheColorHint="#00000000" >
    </ListView>
</LinearLayout>

</LinearLayout>